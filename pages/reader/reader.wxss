
.item_contact{
  width: 100%;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
}

.body{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #E9FAFF;

}
.body_text{
  padding-top: 18rpx;
  text-indent: 72rpx;
  align-items: center;
  margin-left: 24rpx;
  margin-right: 24rpx;
  color: #333;
  font-size: 36rpx;
  font-family:方正启体简体,"Microsoft YaHei",微软雅黑,宋体;
  letter-spacing:0.2em;
  line-height:150%;
  width:90%;
  margin:auto;
  word-break: break-all;
}

.next_chapter{
  width: 90%;
  margin-top: 70rpx;
  color: #666;
  font-size: 36rpx;
  line-height: 60rpx;
  margin-bottom: 50rpx;
  text-align: center;
}
.bottom_view{
  color: #eeeeee;
  position: absolute;
  flex-direction: column;
  display: flex;
  height: 200rpx;
  width:100%;
  left: 0;
  bottom: 0;
  margin-top: -200rpx;
  background-color: rgba(0, 0, 0, 0.8);
}
.text_control{
  flex-direction: row;
  display: flex;
  padding: 18rpx 28rpx;
  align-items: center;
}
.pro_bar{
  flex:1;
  text-align: center;
}

.line{
  width: 100%;
  height: 1rpx;
  background-color: #666;
}

.img_control{
  justify-content:space-between;
  flex-direction: row;
  display: flex;
  padding: 28rpx;
}
.img_1{
  width: 48rpx;
  height: 48rpx;
}
.bgcolor{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: red;
}